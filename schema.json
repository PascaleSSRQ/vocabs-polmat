{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Police Ordinance",
  "description": "This is a generic JSON schema for describing a Police Ordinance",
  "type": "object",
  "default": {
    "@context": {
      "id": "@id",
      "type": "@type",
      "@vocab": "http://schema.org/",
      "@language": "de",
      "skos": "http://www.w3.org/2004/02/skos/core#",
      "lpo": "http://w3id.org/rg-mpg-de/lpo#",
      "prefLabel": "skos:prefLabel",
      "inScheme": "skos:inScheme",
      "Concept": "skos:Concept",
      "Ordinance": "lpo:Legal_Provision"
    }
  },
  "properties": {
    "@context": {
      "type": "object",
      "additionalProperties": true,
      "_display": {
        "className": "hidden"
      }
    },
    "id": {
      "title": "URL",
      "type": "string",
      "format": "uri",
      "_display": {
        "placeholder": "The URL of the resource"
      }
    },
    "type": {
      "title": "Type of Object",
      "description": "This describes what type of entity this is.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Ordinance"
          ]
        }
      },
      "_display": {
        "className": "hidden"
      }
    },
    "legislator": {
      "title": "Legislator",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "title": "Type",
            "type": "string",
            "enum": [
              "Person",
              "Organization"
            ]
          },
          "name": {
            "title": "Name",
            "type": "string",
            "_display": {
              "placeholder": "The legislator's name"
            }
          }
        },
        "required": [
          "name",
          "type"
        ]
      }
    },
    "territory": {
      "title": "Territory",
      "type": "string",
      "_display": {
        "placeholder": "The territory the ordinance was issued in"
      }
    },
    "date": {
      "title": "Date",
      "type": "string",
      "_display": {
        "placeholder": "YYYY-MM-DD"
      }
    },
    "title": {
      "title": "Title",
      "type": "string",
      "_display": {
        "rows": 2
      }
    },
    "about": {
      "title": "Subject",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Concept"
            ]
          },
          "id": {
            "type": "string",
            "format": "uri",
            "pattern": "^https:\/\/w3id.org\/rg-mpg-de\/polmat\/.*"
          },
          "inScheme": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "enum": [
                  "https://w3id.org/rg-mpg-de/polmat/scheme"
                ]
              }
            }
          }
        },
        "required": [
          "id"
        ],
        "_widget": "SkohubLookup"
      }
    },
    "mainEntityOfPage": {
      "title": "Beschreibungsseite/Metadaten",
      "description": "This Object contains metametadata, i.e. information about the description of the OER.",
      "type": "object",
      "_display": {
        "className": "hidden"
      },
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        },
        "dateCreated": {
          "title": "Creation Date of the metadata",
          "type": "string",
          "format": "date"
        },
        "dateModified": {
          "title": "Date of last modification of the metadata",
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "id"
      ]
    }
  },
  "required": [
    "@context",
    "id",
    "legislator",
    "territory",
    "date"
  ]
}
